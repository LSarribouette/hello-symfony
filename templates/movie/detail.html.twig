{% extends 'base.html.twig' %}

{% block body %}
    <div>
        Le film n°{{ movie.id }} est <strong>{{ movie.title }}</strong> ({{ movie.country }}) sorti en {{ movie.releaseYear }}.<br><br>
        {% if movie.wasSeen %}
            Vu !!
        {% else %}
            Pas encore vu  !
        {% endif %}
    </div>
    <br><hr>
    <p><a href="{{ path('movie_list') }}">Retour à la liste de films</a></p>
    <p><a href="{{ path('home_index') }}" class="bt">Retour à l'accueil</a></p>
{% endblock %}

